<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="StringCellDisplay">
        <TextBlock Background="LightBlue" 
                   Text="{Binding }"/>
    </DataTemplate>

    <DataTemplate x:Key="StringCellEdit">
        <TextBox Background="LightGreen" 
                 Text="{Binding }"/>
    </DataTemplate>

    <DataTemplate x:Key="DecimalDisplayTemplate">
        <TextBlock Background="LightBlue" 
                   Text="{Binding }"/>
    </DataTemplate>

    <DataTemplate x:Key="DecimalEditTemplate">
        <TextBox Background="LightGreen" 
                 Text="{Binding Path=., Mode=TwoWay}"/>
    </DataTemplate>
    
</ResourceDictionary>